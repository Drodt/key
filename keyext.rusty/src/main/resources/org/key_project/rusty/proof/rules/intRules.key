\schemaVariables {
    \term int left, right, i, i0, i1;
    \term numbers iz, jz;
}

\rules {
    replace_u32_MIN {
        \find(u32_MIN)
        \replacewith(0)
    };

    replace_u32_MAX {
        \find(u32_MAX)
        \replacewith(4294967295)
    };

    expandInU32 {
        \find(inU32(i))
        \replacewith(leq(u32_MIN, i) & leq(i, u32_MAX))
    };
}
